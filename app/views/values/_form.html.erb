<%= bootstrap_form_for @value, :html=>{:multipart=>true} do |f| %>
  <% if @value.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@value.errors.count, "error") %> prohibited this value from being saved:</h2>

      <ul>
        <% @value.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :name %>
  <%= f.text_area :description%>
  <%= f.label :image%><br/>
  <%= image_tag (@value.image.to_s) %>
  <%= f.file_field :image, hide_label: true %> 
  <%= f.submit "Save", :class=>"btn btn-sm btn-primary"%>
  <%= link_to 'Back', values_path, :class=>"btn btn-default" %>
<% end %>
