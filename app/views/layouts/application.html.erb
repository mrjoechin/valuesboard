    <div id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
          <ul class="sidebar-nav">
              <li class="sidebar-brand">
                  <a href="#">
                    VSB
                  </a>
              </li>
              <li class="<%= 'active' if params[:controller] == 'dashboard' %>">
                <%= link_to "Dashboard", root_path %>
              </li>
              <li class="<%= 'active' if params[:controller] == 'values' %>">
                <%= link_to "Values", values_path %>
              </li>
              <li class="<%= 'active' if params[:controller] == 'stories' %>">
